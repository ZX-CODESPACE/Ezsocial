<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/image_style"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/list_item_profile"
            android:layout_weight="0.08"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="248dp"
            android:id="@+id/list_item_name"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/list_item_profile"
            android:layout_toEndOf="@+id/list_item_profile"
            android:textColor="#000000"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="247dp"
            android:id="@+id/list_item_description"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_name"
            android:layout_toRightOf="@+id/list_item_profile"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/list_item_profile"
            android:textAllCaps="false"
            android:lineSpacingExtra="2sp" />
    </RelativeLayout>

</LinearLayout>