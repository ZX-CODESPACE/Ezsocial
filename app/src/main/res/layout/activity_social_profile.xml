<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_social_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhexiao.ezsocial.SocialProfileActivity">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/s_p_title"
        android:layout_weight="0.09"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s_p_description"
        android:layout_weight="0.39"
        android:textSize="16sp"
        android:textColor="@color/description_color"
        android:layout_below="@+id/s_p_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/channel_data"
        android:layout_height="360dp"
        android:layout_below="@+id/s_p_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp" />

</RelativeLayout>
