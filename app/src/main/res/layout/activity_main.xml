<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhexiao.ezsocial.MainActivity">

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:id="@+id/loginBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="userLogin"
        android:background="@drawable/btn_style"
        android:layout_height="40dp"
        android:textColor="#fff" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/submitSearch"
        android:layout_below="@+id/keyword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:onClick="submitSearch"
        android:background="@drawable/btn_style"
        android:textSize="12sp"
        android:textColor="?attr/colorBackgroundFloating" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/keyword"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/loginBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Search..." />

    <!-- This could be your fragment container, or something -->

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:bb_inActiveTabColor="#000000"
            app:bb_activeTabColor="#F22613"
            app:bb_tabXmlResource="@xml/bottombar_tabs" >

        </com.roughike.bottombar.BottomBar>
    </FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/trending"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/contentContainer"
        android:layout_height="250dp" />


</RelativeLayout>
